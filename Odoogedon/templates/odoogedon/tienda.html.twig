{% extends 'plantilla.html.twig' %}

{% block title %}{{ titulo }}{% endblock %}

{% block contenido %}
    <div id="contenedor">
        <div class="scrolling-wrapper">
            {% for gorro in gorros %}
                {% if gorro.contador%4==0 %}
                    <br>
                {% endif %}
            <a href="producto/{{ gorro.id }}">
                <div class="card">
                    <div flex class="texto-centrado">{{ gorro.nombre }}</div>
                    <div flex class="texto-centrado"><img class="imagen" src={{ asset(gorro.imagen) }}/></div>
                    <div flex class="texto-centrado"><p>Valoracion: {{ gorro.valoracion }}/10 &#9733</p></div>
                    <div flex class="texto-centrado">{{ gorro.precio }}â‚¬</div>
                </div>
            </a>
            {% endfor %}
        </div>
    </div>
{% endblock %}
